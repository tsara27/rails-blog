<% if @article.errors.any? %>
    <div class="alert alert-danger">
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @article, remote: true do |f| %>
    <div class="form-group">
        <%= f.text_field :title, class: 'form-control input-lg', placeholder: 'Title here ..' %>
    </div>

    <div class="form-group">
        <%= f.text_area :content, class: 'summernote', style: 'height: 250px' %>
    </div>

    <div class="row">
      <div class="col-md-6">

      </div>
      <div class="col-md-6">
        <div class="btn-group pull-right" role="group">
          <%= f.submit 'Save to Draft', class: 'btn btn-default btn-lg', name: "draft" %>
          <%= f.submit 'Publish', class: 'btn btn-primary btn-lg', name: "publish" %>
        </div>
      </div>
    </div>
    
<% end %>

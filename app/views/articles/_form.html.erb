<div class="row">
  <% if @article.errors.any? %>
      <div class="alert alert-danger">
          <ul>
              <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
  <% end %>

  <%= form_for @article, remote: true do |f| %>

  <div class="col-md-8">
    <div class="form-group">
        <%= f.text_field :title, class: 'form-control input-lg', placeholder: 'Title here ..' %>
    </div>

    <div class="form-group">
        <%= f.text_area :content, class: 'summernote', style: 'height: 250px' %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <label>Post As</label>

          <select name="anon" class="form-control">
            <option value="false"><%= current_user.name %></option>
            <option value="true">Anynomous</option>
          </select>
        </div>

        <div class="form-group">
          <label>Tag</label>
          <%= f.text_field :topic_list, class: 'form-control', placeholder: 'Separate by comma (,)' %>
        </div>
      </div>

      <div class="col-xs-12">
        <div class="btn-group" role="group">
          <input type="submit" value="Save to Draft" class="btn btn-default btn-lg" data-loading-text="Saving ..." name="draft" id="draft-btn">
          <input type="submit" value="Publish" class="btn btn-primary btn-lg" data-loading-text="Saving ..." name="publish" id="publish-btn">
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>

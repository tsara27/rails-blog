<%= form_for @user do |f| %>
	<div class="form-group">
		<label>Avatar</label>
		<%= f.file_field :avatar, class: 'form-control input-lg' %>
	</div>

	<div class="form-group">
		<label>Name</label>
		<%= f.text_field :name, class: 'form-control input-lg' %>
	</div>

	<div class="form-group">
		<label>Name</label>
		<%= f.text_area :bio, class: 'summernote' %>
	</div>

	<div class="form-group">
		<label>Email</label>
		<%= f.text_field :email, class: 'form-control input-lg', disabled: "true" %>
	</div>

	<p class="text-center">
		<%= f.submit 'Save', class: 'btn btn-primary btn-lg btn-block' %>
	</p>
<% end %>

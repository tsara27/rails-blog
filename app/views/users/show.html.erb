<% provide :title, @user.name %>
<div class="container" style="padding-top:50px">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="text-center">
				<%= image_tag @user.avatar.url(:medium), class: "img-circle" %>
			</div>
			<header class="page-header text-center">
				<h2>
					<%= @user.name %> <small><%= @user.articles.length %> Articles</small>
				</h2>
				<h4><span id="followers"><%= @user.followers.count %></span> Followers | <span id="following"><%= @user.following.count %></span> Following</h4>
				<%= @user.bio[0..150].html_safe %>
				<% if current_user == @user %>
					<div>
						<%= link_to 'Settings', edit_user_path(@user.id), class: "btn btn-primary" %>
					</div>
				<% end %>
				<% if user_signed_in? && current_user != @user %>
					<div id="follow-form">
						<% if current_user.following?(@user) %>
							<%= render 'unfollow' %>
						<% else %>
							<%= render 'follow' %>
						<% end %>
					</div>
				<% end %>
			</header>

			<% @user.articles.reverse.each do |item| %>
					<article class="home-lists">
							<header>
									<h2><%= link_to item.title, item %></h2>
							</header>
							<section>
									<%= ("<p>" + item.content[0..250] + "<p>").html_safe %>
							</section>
							<hr>
							<small>Created at <%= time_ago_in_words(item.created_at) %> ago, By <%= link_to item.user.name, user_path(item.user.id) %></small>
					</article>
			<% end %>
		</div>
	</div>
</div>
